#include <LiquidCrystal.h>
const int rs=8,en=9,d0=0,d1=1,d2=2,d3=3,d4=4,d5=5,d6=6,d7=7;
LiquidCrystal lcd(rs,en,d0,d1,d2,d3,d4,d5,d6,d7);
void setup()
{
  pinMode(A0,INPUT);
  pinMode(11,OUTPUT); 
  pinMode(12,OUTPUT);
  lcd.begin(16,2);
}

void loop()
{
  lcd.setCursor(0,0);
  float a=analogRead(A0);
  a=a*(5.0/1024.0);
  float temp=(a-0.5)*100;
  lcd.print("Temperature is:");
  lcd.setCursor(5,1);
  lcd.print(temp);
  if (temp>80)
  {
    digitalWrite(11,1);
    digitalWrite(12,1);
  }
  else
  {
    digitalWrite(11,0);
    digitalWrite(12,0);
  }
  delay(1000);
  lcd.noDisplay();
  delay(1000);
  lcd.display();
  delay(1000);
}
