from random import randrange
import time
on = True
while on:
    try:
        time.sleep(2)
        temp = randrange(20, 50)
        humid = randrange(10, 100)
        if (temp >= 40):
            print(temp, "The temperature is high!!- ALARM")
        else:
            print(temp, "The temperature is normal")
        if (humid >= 70):
            print(humid, "The humidity is high!!- ALARM")
        else:
            print(humid, "The humidity is normal")
    except KeyboardInterrupt:
        break
